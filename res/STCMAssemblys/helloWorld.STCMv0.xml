<!-- Cas Liaison de Servers :
On à 2 composants aux paths donnés
InterfaceHello déclare une méthode sayHello() qui retourne une string
InterfacePrinter déclare une méthode prenant en entrée une string et ne retournant rien
On souhaite connecter ces deux composants -->
<stcmassembly>
	<declare>
		<component name="IHello">
			<port>
				<outport name="sayHello" type="string"/>
			</port>
		</component>

		<component name="IPrinter">
			<port>
				<inport name="printString" type="string"/>
			</port>
		</component>

		<instance name="serverHello" componentRef="IHello" path="/programs/Servers/HelloServer" signature=""/>
		<instance name="serverPrinter" componentRef="IPrinter" path="/programs/Servers/PrinterServer" parameters=""/>

		<configPort>
			<inout>
				<setPort in="serverHello.sayHello" out="serverPrinter.printString"/>
			</inout>
		</configPort>
	</declare>

	<instruction>
		<parallel>
			<exectask nameInstance="serverHello"/>
			<exectask nameInstance="serverPrinter"/>
		</parallel>
	</instruction>
</stcmassembly>
